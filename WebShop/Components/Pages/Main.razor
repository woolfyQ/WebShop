@using Core.Entity
@using WebShop.Components.Layout
@page "/"
@layout MainLayout
@rendermode InteractiveServer
<PageTitle>Main</PageTitle>

<div class="banner">
    <h1>Добро пожаловать в MYROOF</h1>
    <p>Лучшие решения для вашего двора и сада</p>
    <a href="/Catalog" class="cta-button">Посмотреть каталог</a>
</div>

